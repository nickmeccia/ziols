<%= form_tag send_email_path, {:class => "send_email_form"} do %>
  <legend>make an appointment</legend>

  <fieldset>
    <%= label "email", "name" %>
    <%= text_field "email", "name" %>
  </fieldset>
  <fieldset>
    <%= label "email", "email" %>
    <%= text_field "email", "email" %>
  </fieldset>
  <fieldset>
    <%= label "email", "city" %>
    <%= text_field "email", "city" %>
  </fieldset>
  <fieldset>
    <%= label "email", "zip" %>
    <%= text_field "email", "zip" %>
  </fieldset>
  <fieldset>
    <%= label "email", "phone" %>
    <%= text_field "email", "phone" %>
  </fieldset>
  <fieldset>
    <%= label "email", "best time to call" %>
    <%= text_field "email", "call_time" %>
  </fieldset>

  <legend>
    preferred appointment time
  </legend>

  <div class="radio-group">
    <fieldset class="radio">
      <%= radio_button_tag "email[appointment_day]", "Weekdays" %>
      <%= label_tag "email_appointment_day_weekday", "Weekdays" %>
    </fieldset>

    <fieldset class="radio">
      <%= radio_button_tag "email[appointment_day]", "Weekends" %>
      <%= label_tag "email_appointment_day_weekend", "Weekends" %>
    </fieldset>
  </div>

  <div class="radio-group">
    <fieldset class="radio">
      <%= radio_button_tag "email[appointment_time]", "8:00 - 5:00" %>
      <%= label_tag "email_appointment_time_8:00_-_5:00", "8:00 - 5:00" %>
    </fieldset>

    <fieldset class="radio">
      <%= radio_button_tag "email[appointment_time]", "5:00 - 7:00" %>
      <%= label_tag "email_appointment_time_5:00_-_7:00", "5:00 - 7:00" %>
    </fieldset>
  </div>

  <fieldset>
    <%= label "email", "additional comments" %>
    <%= text_area "email", "comments" %>
  </fieldset>

  <fieldset>
    <%= submit_tag "Submit" %>
  </fieldset>
<%- end -%>